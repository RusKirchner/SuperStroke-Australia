{% schema %}
{
  "name": "Products for Pages",
  "tag": "section",
  "class": "custom-multi-product-display",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Featured Products"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 28
    },
    {
      "type": "text",
      "id": "section_subheading",
      "label": "Section Subheading",
      "default": "Explore our top picks"
    },
    {
      "type": "range",
      "id": "subheading_font_size",
      "label": "Subheading Font Size (px)",
      "min": 12,
      "max": 36,
      "step": 1,
      "default": 18
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "product_block",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "selected_product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Products for Pages",
      "blocks": []
    }
  ]
}
{% endschema %}

{% style %}
.custom-multi-product-display {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  text-align: center;
}
.custom-multi-product-display h2 {
  font-size: {{ section.settings.heading_font_size }}px;
  margin-bottom: 10px;
}
.custom-multi-product-display h3 {
  font-size: {{ section.settings.subheading_font_size }}px;
  margin-bottom: 30px;
  color: #555;
}
.custom-product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  justify-content: center;
}
.custom-product-card {
  max-width: 250px;
  width: 100%;
}
.custom-product-card img {
  max-width: 100%;
  margin-bottom: 15px;
  transition: transform 0.3s ease;
}
.custom-product-card img:hover {
  transform: scale(1.05);
}
.color-swatches {
  margin-top: 10px;
}
.color-swatch {
  display:inline-block; 
  width:20px; 
  height:20px; 
  border:1px solid #ccc; 
  border-radius:50%; 
  margin:0 5px; 
  cursor:pointer;
}
{% endstyle %}

<div class="custom-multi-product-display">
  {% if section.settings.section_heading != blank %}
    <h2>{{ section.settings.section_heading }}</h2>
  {% endif %}
  {% if section.settings.section_subheading != blank %}
    <h3>{{ section.settings.section_subheading }}</h3>
  {% endif %}

  <div class="custom-product-grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.selected_product] %}
      {% if product %}
        <div class="custom-product-card">
          <img 
            id="MainImage-{{ section.id }}-{{ forloop.index }}" 
            src="{{ product.featured_image | image_url: 'medium' }}" 
            alt="{{ product.title }}"
          >
          <h4>{{ product.title }}</h4>
          <p style="font-weight: 500;">{{ product.price | money }}</p>

          {% assign color_option_index = -1 %}
          {% for option in product.options_with_values %}
            {% if option.name == 'Color' or option.name == 'Colour' %}
              {% assign color_option_index = forloop.index0 %}
            {% endif %}
          {% endfor %}

          {% if color_option_index >= 0 %}
            <div class="color-swatches">
              {% assign shown_colors = '' %}
              {% for variant in product.variants %}
                {% assign color = variant.options[color_option_index] %}
                {% unless shown_colors contains color %}
                  {% assign shown_colors = shown_colors | append: color | append: ',' %}
                  {% assign color_code = color | split: ' ' | last | downcase %}
                  <span 
                    class="color-swatch" 
                    data-img="{{ variant.featured_image | image_url: 'medium' }}"
                    data-target="MainImage-{{ section.id }}-{{ forloop.parentloop.index }}"
                    style="background-color: {{ color_code }};"
                    title="{{ color }}"
                  ></span>
                {% endunless %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const swatches = document.querySelectorAll(".color-swatch");
    swatches.forEach(function(swatch) {
      swatch.addEventListener("click", function() {
        const img = this.getAttribute("data-img");
        const target = this.getAttribute("data-target");
        const targetImg = document.getElementById(target);
        if (img && targetImg) {
          targetImg.src = img;
        }
      });
    });
  });
</script>
