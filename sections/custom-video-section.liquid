{% schema %}
{
  "name": "Custom Video Section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "min": 12,
      "max": 60,
      "step": 1,
      "default": 28
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    },
    {
      "type": "select",
      "id": "video_type",
      "label": "Video Source",
      "options": [
        { "value": "youtube", "label": "YouTube" },
        { "value": "vimeo", "label": "Vimeo" },
        { "value": "self_hosted", "label": "Self Hosted" }
      ],
      "default": "youtube"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "default": "https://www.youtube.com/embed/VIDEO_ID"
    }
  ],
  "presets": [
    {
      "name": "Custom Video Section",
      "category": "Media"
    }
  ]
}
{% endschema %}

{% style %}
  #section-{{ section.id }} {
    background-color: {{ section.settings.section_bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    text-align: center;
  }

  #section-{{ section.id }} .video-heading {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: 20px;
  }

  #section-{{ section.id }} .video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    max-width: 100%;
  }

  #section-{{ section.id }} .video-wrapper iframe,
  #section-{{ section.id }} .video-wrapper video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
{% endstyle %}

<div id="section-{{ section.id }}">
  {% if section.settings.section_heading != blank %}
    <h2 class="video-heading">{{ section.settings.section_heading }}</h2>
  {% endif %}

  <div class="video-wrapper">
    {% case section.settings.video_type %}
      {% when "youtube" %}
        <iframe src="{{ section.settings.video_url | replace: 'watch?v=', 'embed/' }}" frameborder="0" allowfullscreen></iframe>
      {% when "vimeo" %}
        <iframe src="{{ section.settings.video_url }}" frameborder="0" allowfullscreen></iframe>
      {% when "self_hosted" %}
        <video controls autoplay muted loop>
          <source src="{{ section.settings.video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
    {% endcase %}
  </div>
</div>
