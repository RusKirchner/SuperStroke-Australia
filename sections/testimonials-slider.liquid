{% schema %}
{
  "name": "Testimonials Slider",
  "tag": "section",
  "class": "testimonials-main",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Testimonial Text Font Size (px)",
      "min": 12,
      "max": 36,
      "step": 1,
      "default": 18
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Testimonial Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "author_size",
      "label": "Author Name Font Size (px)",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16
    },
    {
      "type": "color",
      "id": "author_color",
      "label": "Author Name Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "richtext",
          "id": "testimonial_text",
          "label": "Testimonial Text"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Testimonials Slider",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}

{% style %}
@import url('https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css');

#section-{{ section.id }} {
  background-color: {{ section.settings.bg_color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

#section-{{ section.id }} .testimonial-slide {
  color: {{ section.settings.text_color }};
  font-size: {{ section.settings.text_size }}px;
}

#section-{{ section.id }} .author {
  color: {{ section.settings.author_color }};
  font-size: {{ section.settings.author_size }}px;
  margin-top: 40px;
}

#section-{{ section.id }} .swiper-button-prev,
#section-{{ section.id }} .swiper-button-next {
  color: {{ section.settings.text_color }};
}

#section-{{ section.id }} .swiper-pagination {
  display: none;
}
{% endstyle %}

<div id="section-{{ section.id }}">
  <div class="page-width">
    <div class="swiper testimonial-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="testimonial-slide">
              {{ block.settings.testimonial_text }}
              {% if block.settings.author != blank %}
                <div class="author">{{ block.settings.author }}</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Arrows only -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>

{% javascript %}
<!-- Swiper JS CDN -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".testimonial-swiper", {
      loop: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev"
      },
      pagination: false
    });
  });
</script>
{% endjavascript %}
