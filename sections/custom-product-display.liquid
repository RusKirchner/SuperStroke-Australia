{% schema %}
{
  "name": "Custom Product Display",
  "settings": [
    {
      "type": "product",
      "id": "selected_product",
      "label": "Select Product"
    }
  ],
  "presets": [
    {
      "name": "Custom Product Display"
    }
  ]
}
{% endschema %}

{% if section.settings.selected_product %}
  {% assign product = all_products[section.settings.selected_product] %}

  <!-- Product JSON (needed for variant switching) -->
  <script type="application/json" id="ProductJson-{{ section.id }}">
    {{ product | json }}
  </script>

  <div class="custom-product-display">
    <div class="product-image" id="ProductImage-{{ section.id }}">
      <img 
        src="{{ product.featured_image | img_url: 'large' }}" 
        alt="{{ product.title }}" 
        id="MainImage-{{ section.id }}"
      />
    </div>
    
    <div class="product-details">
      <h2>{{ product.title }}</h2>
      <p>{{ product.price | money }}</p>

      <!-- Globo Swatch Container -->
      <div class="gcs-product" data-product-handle="{{ product.handle }}"></div>
    </div>
  </div>

  <!-- Force GCS Swatch Initialization -->
  <script>
    setTimeout(function() {
      if (typeof GCS !== 'undefined') {
        console.log("‚úÖ GCS object found.");
        if (typeof GCS.init === 'function') {
          console.log("üîÑ Calling GCS.init() to initialize swatches.");
          GCS.init();
        } else {
          console.warn("‚ö†Ô∏è GCS.init is not a function.");
        }
      } else {
        console.warn("‚ùå GCS is undefined. Swatches will not load.");
      }
    }, 1000);
  </script>

{% else %}
  <p>No product selected.</p>
{% endif %}
