{% schema %}
{
  "name": "Custom Product Display",
  "settings": [
    {
      "type": "product",
      "id": "selected_product",
      "label": "Select Product"
    }
  ],
  "presets": [
    {
      "name": "Custom Product Display"
    }
  ]
}
{% endschema %}

{% if section.settings.selected_product %}
  {% assign product = all_products[section.settings.selected_product] %}
  
  <!-- Product JSON for swatches -->
  <script type="application/json" id="ProductJson-{{ section.id }}">
    {{ product | json }}
  </script>

  <div class="custom-product-display">
    <div class="product-image" id="ProductImage-{{ section.id }}">
      <img 
        src="{{ product.featured_image | img_url: 'large' }}" 
        alt="{{ product.title }}" 
        id="MainImage-{{ section.id }}"
      />
    </div>
    
    <div class="product-details">
      <h2>{{ product.title }}</h2>
      <p>{{ product.price | money }}</p>

      <!-- Globo Color Swatch (dynamic div version) -->
      <div class="gcs-product" data-product-handle="{{ product.handle }}"></div>
    </div>
  </div>
{% else %}
  <p>No product selected.</p>
{% endif %}
<script>
  document.addEventListener("DOMContentLoaded", function() {
    if (typeof GCS !== 'undefined' && typeof GCS.init === 'function') {
      GCS.init(); // Re-initialize Globo Color Swatch
    }
  });
</script>