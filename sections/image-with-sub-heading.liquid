{% stylesheet %}
.image-text-wrapper {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 2rem;
}

.image-text-wrapper.reverse {
  flex-direction: row-reverse;
}

.image-block {
  flex: 1;
}

.image-block img {
  width: 100%;
  height: auto;
  display: block;
}

.text-block {
  flex: 1;
}

.text-block .subheading,
.text-block .heading,
.text-block .richtext {
  margin-bottom: 1rem;
}

.custom-btn {
  padding: 12px 24px;
  display: inline-block;
  text-decoration: none;
  border: none;
  transition: all 0.3s ease;
  cursor: pointer;
  margin-top: 1rem;
}
{% endstylesheet %}

<div
  class="custom-image-with-text-section"
  style="
    background-color: {{ section.settings.section_bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container">
    <div class="image-text-wrapper {% if section.settings.image_position == 'right' %}reverse{% endif %}">
      
      <div class="image-block">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 900 }}" alt="Image" />
        {% endif %}
      </div>

      <div class="text-block">
        {% if section.settings.subheading != blank %}
          <p
            class="subheading"
            style="
              color: {{ section.settings.subheading_color }};
              font-size: {{ section.settings.subheading_font_size }}px;
            "
          >
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2
            class="heading"
            style="
              color: {{ section.settings.heading_color }};
              font-size: {{ section.settings.heading_font_size }}px;
            "
          >
            {{ section.settings.heading | replace: '&lt;br&gt;', '<br>' }}
          </h2>
        {% endif %}

        {% if section.settings.richtext != blank %}
          <div
            class="richtext"
            style="
              color: {{ section.settings.richtext_color }};
              font-size: {{ section.settings.richtext_font_size }}px;
            "
          >
            {{ section.settings.richtext }}
          </div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <a
            href="{{ section.settings.button_link }}"
            class="custom-btn"
            style="
              color: {{ section.settings.button_text_color }};
              background-color: {{ section.settings.button_bg_color }};
            "
            onmouseover="this.style.backgroundColor='{{ section.settings.button_bg_hover_color }}'; this.style.color='{{ section.settings.button_text_hover_color }}';"
            onmouseout="this.style.backgroundColor='{{ section.settings.button_bg_color }}'; this.style.color='{{ section.settings.button_text_color }}';"
          >
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image with Sub Heading",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "subheading_font_size",
      "min": 10,
      "max": 40,
      "step": 1,
      "label": "Subheading Font Size",
      "default": 16
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Use &lt;br&gt; for line breaks"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 16,
      "max": 60,
      "step": 1,
      "label": "Heading Font Size",
      "default": 32
    },
    {
      "type": "richtext",
      "id": "richtext",
      "label": "Rich Text"
    },
    {
      "type": "color",
      "id": "richtext_color",
      "label": "Rich Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "richtext_font_size",
      "min": 10,
      "max": 30,
      "step": 1,
      "label": "Rich Text Font Size",
      "default": 16
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_hover_color",
      "label": "Button Hover Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_bg_hover_color",
      "label": "Button Hover Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Image with Sub Heading"
    }
  ]
}
{% endschema %}
