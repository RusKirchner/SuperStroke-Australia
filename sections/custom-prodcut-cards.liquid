{% schema %}
{
  "name": "Custom Product Cards",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Section background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Product title color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Product price color",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Custom Product Cards",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
.custom-product-cards {
  background-color: {{ section.settings.background_color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}
.custom-product-cards .grid {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(1, 1fr);
}
@media (min-width: 640px) {
  .custom-product-cards .grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (min-width: 1024px) {
  .custom-product-cards .grid {
    grid-template-columns: repeat(4, 1fr);
  }
}
.custom-product-cards .product-card {
  text-align: center;
}
.custom-product-cards .product-card h3 {
  color: {{ section.settings.title_color }};
  margin-top: 10px;
}
.custom-product-cards .product-card p {
  color: {{ section.settings.price_color }};
  margin-top: 5px;
}
{% endstyle %}

<div class="custom-product-cards">
  <div class="cards-inner container">
  <div class="page-width">
  <div class="grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="product-card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}" class="mb-2" />
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  </div>
  </div>
</div>
