{% schema %}
{
  "name": "Banner With Overlay",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.5
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Section Top Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Section Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading Text"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "heading_font_size",
          "label": "Font Size (px)",
          "min": 14,
          "max": 80,
          "step": 2,
          "default": 36
        }
      ]
    },
    {
      "type": "richtext",
      "name": "Rich Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "text_font_size",
          "label": "Font Size (px)",
          "min": 12,
          "max": 36,
          "step": 2,
          "default": 18
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons Block",
      "settings": [
        {
          "type": "text",
          "id": "btn1_label",
          "label": "Button 1 Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "btn1_url",
          "label": "Button 1 Link"
        },
        {
          "type": "text",
          "id": "btn2_label",
          "label": "Button 2 Label",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "btn2_url",
          "label": "Button 2 Link"
        },
        {
          "type": "color",
          "id": "btn_bg",
          "label": "Button Background",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "btn_color",
          "label": "Button Text Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "btn_hover_bg",
          "label": "Button Hover Background",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "btn_hover_color",
          "label": "Button Hover Text Color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner With Overlay",
      "blocks": [
        { "type": "heading" },
        { "type": "richtext" },
        { "type": "buttons" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
<style>
  .banner-overlay {
    position: relative;
    background-size: cover;
    background-position: center;
  }
  .banner-overlay::before {
    content: "";
    position: absolute;
    inset: 0;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity }};
    z-index: 1;
  }
  .banner-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
  }
  .banner-buttons a {
    display: inline-block;
    margin: 10px 10px 0;
    padding: 12px 24px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
</style>
{% endstylesheet %}

<div
  class="banner-overlay"
  style="background-image: url({{ section.settings.bg_image | image_url }}); padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div
    class="banner-content container"
    style="
      text-align: {{ section.settings.content_alignment }};
      align-items: {% if section.settings.content_alignment == 'left' %}flex-start{% elsif section.settings.content_alignment == 'right' %}flex-end{% else %}center{% endif %};
    "
  >
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          <h2 style="color: {{ block.settings.heading_color }}; font-size: {{ block.settings.heading_font_size }}px;">
            {{ block.settings.heading }}
          </h2>
        {% when 'richtext' %}
          <div style="color: {{ block.settings.text_color }}; font-size: {{ block.settings.text_font_size }}px;">
            {{ block.settings.text }}
          </div>
        {% when 'buttons' %}
          <div class="banner-buttons">
            {% if block.settings.btn1_label != blank and block.settings.btn1_url != blank %}
              <a href="{{ block.settings.btn1_url }}"
                 style="background-color: {{ block.settings.btn_bg }}; color: {{ block.settings.btn_color }};"
                 onmouseover="this.style.backgroundColor='{{ block.settings.btn_hover_bg }}'; this.style.color='{{ block.settings.btn_hover_color }}';"
                 onmouseout="this.style.backgroundColor='{{ block.settings.btn_bg }}'; this.style.color='{{ block.settings.btn_color }}';">
                {{ block.settings.btn1_label }}
              </a>
            {% endif %}
            {% if block.settings.btn2_label != blank and block.settings.btn2_url != blank %}
              <a href="{{ block.settings.btn2_url }}"
                 style="background-color: {{ block.settings.btn_bg }}; color: {{ block.settings.btn_color }};"
                 onmouseover="this.style.backgroundColor='{{ block.settings.btn_hover_bg }}'; this.style.color='{{ block.settings.btn_hover_color }}';"
                 onmouseout="this.style.backgroundColor='{{ block.settings.btn_bg }}'; this.style.color='{{ block.settings.btn_color }}';">
                {{ block.settings.btn2_label }}
              </a>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>
