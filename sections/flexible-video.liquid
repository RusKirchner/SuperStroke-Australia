<div class="{% if section.settings.full_width %}full-width{% else %}page-width{% endif %}" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;">
  {% if section.settings.video_type == 'self_hosted' and section.settings.video_file != blank %}
    <video
      playsinline
      {% if section.settings.autoplay %}autoplay{% endif %}
      {% if section.settings.loop %}loop{% endif %}
      {% unless section.settings.hide_controls %}controls{% endunless %}
      muted
      style="width: 100%; max-width: 100%; height: auto;"
    >
      <source src="{{ section.settings.video_file | file_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  
  {% elsif section.settings.video_type == 'youtube' and section.settings.video_url contains 'youtube.com' %}
    <iframe
      src="https://www.youtube.com/embed/{{ section.settings.video_url | split: 'v=' | last | split: '&' | first }}?rel=0&mute=1{% if section.settings.autoplay %}&autoplay=1{% endif %}{% if section.settings.loop %}&loop=1&playlist={{ section.settings.video_url | split: 'v=' | last | split: '&' | first }}{% endif %}{% if section.settings.hide_controls %}&controls=0{% endif %}"
      frameborder="0"
      allow="autoplay; encrypted-media"
      allowfullscreen
      style="width: 100%; aspect-ratio: 16 / 9;">
    </iframe>

  {% elsif section.settings.video_type == 'vimeo' and section.settings.video_url contains 'vimeo.com' %}
    <iframe
      src="https://player.vimeo.com/video/{{ section.settings.video_url | split: '/' | last }}?muted=1{% if section.settings.autoplay %}&autoplay=1{% endif %}{% if section.settings.loop %}&loop=1{% endif %}{% if section.settings.hide_controls %}&controls=0{% endif %}"
      frameborder="0"
      allow="autoplay; fullscreen"
      allowfullscreen
      style="width: 100%; aspect-ratio: 16 / 9;">
    </iframe>

  {% else %}
    <p style="color:red;">No valid video source provided.</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Flexible Video",
  "settings": [
    {
      "type": "select",
      "id": "video_type",
      "label": "Video Type",
      "options": [
        { "value": "youtube", "label": "YouTube" },
        { "value": "vimeo", "label": "Vimeo" },
        { "value": "self_hosted", "label": "Self-hosted (MP4 upload)" }
      ],
      "default": "youtube"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (YouTube/Vimeo)"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "Self-hosted Video File (MP4)"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop Video",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "hide_controls",
      "label": "Hide Controls",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Layout",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "default": 60,
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "default": 60,
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Flexible Video Section",
      "category": "Media"
    }
  ]
}
{% endschema %}
