{% schema %}
{
  "name": "Product or Variant Blocks",
  "tag": "section",
  "class": "cstm-blocks-product-cards",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "richtext",
      "id": "rich_text",
      "label": "Rich Text"
    },
    {
      "type": "color",
      "id": "richtext_color",
      "label": "Rich Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Default Section Font Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "product_block",
      "name": "Product or Variant Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Block Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Block Title"
        },
        {
          "type": "text",
          "id": "block_text",
          "label": "Block Text"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "text",
          "id": "variant_id",
          "label": "Variant ID (optional)",
          "info": "Paste the exact Variant ID from Shopify admin to show that variantâ€™s price and link"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "price_color",
          "label": "Price Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_background_color",
          "label": "Button Background Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product or Variant Blocks",
      "category": "Custom"
    }
  ]
}
{% endschema %}
<div class="product-variant-blocks"
         style="
            background-color: {{ section.settings.background_color }};
            color: {{ section.settings.font_color }};
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
         ">
<div class="container">
  <div class="page-width">
    <div class="product-variant-blocks-inner">
      <div class="product-variant-text">
        {% if section.settings.subheading != blank %}
          <h4 style="color: {{ section.settings.subheading_color }}">{{ section.settings.subheading }}</h4>
        {% endif %}
      
        {% if section.settings.heading != blank %}
          <h2 style="color: {{ section.settings.heading_color }}">{{ section.settings.heading }}</h2>
        {% endif %}
      
        {% if section.settings.rich_text != blank %}
          <div class="rich-text" style="color: {{ section.settings.richtext_color }}">
            {{ section.settings.rich_text }}
          </div>
        </div>
      {% endif %}
    
      <div class="blocks-grid">
        {% for block in section.blocks %}
          {% assign product = all_products[block.settings.product] %}
          {% assign variant_id = block.settings.variant_id | plus: 0 %}
          {% assign selected_variant = nil %}
    
          {% if product %}
            {% if variant_id > 0 %}
              {% for v in product.variants %}
                {% if v.id == variant_id %}
                  {% assign selected_variant = v %}
                  {% break %}
                {% endif %}
              {% endfor %}
            {% endif %}
            {% if selected_variant == nil %}
              {% assign selected_variant = product.variants.first %}
            {% endif %}
          {% endif %}
    
          <div class="block" {{ block.shopify_attributes }}>
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 400 }}" alt="{{ block.settings.title | escape }}">
            {% endif %}
    
            {% if block.settings.title %}
              <h3 style="color: {{ block.settings.title_color }}">{{ block.settings.title }}</h3>
            {% endif %}

            {% if block.settings.block_text %}
              <p class="head-below" style="color: {{ block.settings.title_color }}">{{ block.settings.block_text }}</p>
            {% endif %}
    
            {% if selected_variant %}
              <p class="price" style="color: {{ block.settings.price_color }}">{{ selected_variant.price | money }}</p>
              <a href="{{ product.url }}?variant={{ selected_variant.id }}"
                 class="product-link">
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
</div>
 
<style>
.product-variant-blocks-inner {
  width: 100%;
  max-width: 790px;
  margin: 0 auto;
  text-align: center;
}
.product-variant-blocks-inner .blocks-grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 50px;
  gap: 40px;
  justify-content: center;
}
.product-variant-blocks-inner .block {
  padding: 0;
  border: 0;
  overflow: hidden;
  position: relative;
  width: calc(33.3333% - 40px);
}
.product-variant-blocks-inner .block .product-link {
  display: inline-block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
}
.product-variant-text {
  width: 100%;
  max-width: 668px;
  margin: 0 auto;
}
.product-variant-text h2 {
  font-size: 48px;
  letter-spacing: -0.5px;
}
.product-variant-blocks-inner .blocks-grid h3 {
  font-size: 24px;
  margin-top: 10px;
}
.product-variant-blocks-inner .block img {
  max-height: 223px;
  object-fit: cover;
  object-position: center;
  width: 100%;
}
</style>
