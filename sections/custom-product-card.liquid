{% schema %}
{
  "name": "Custom Product Card",
  "tag": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Select product"
    },
    {
      "type": "image_picker",
      "id": "first_image",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "second_image",
      "label": "Second Image (Hover)"
    },
    {
      "type": "color",
      "id": "section_bg",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Product Title Font Size",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Product Title Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Custom Product Card"
    }
  ]
}
{% endschema %}

{% assign product = all_products[section.settings.product] %}
{% if product %}
  <div 
    class="custom-product-card" 
    style="background-color: {{ section.settings.section_bg }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
  >
    <a href="{{ product.url }}" class="image-wrapper" style="position: relative; display: block;">
      <img 
        src="{{ section.settings.first_image | img_url: '500x' }}" 
        alt="{{ product.title }}" 
        class="product-main-image"
        style="width: 100%; transition: opacity 0.3s ease;"
      >
      {% if section.settings.second_image %}
        <img 
          src="{{ section.settings.second_image | img_url: '500x' }}" 
          alt="{{ product.title }} hover" 
          class="product-hover-image"
          style="position: absolute; top: 0; left: 0; width: 100%; opacity: 0; transition: opacity 0.3s ease;"
        >
      {% endif %}
    </a>

    <h3 
      class="product-title"
      style="font-size: {{ section.settings.title_font_size }}px; color: {{ section.settings.title_color }};"
    >
      <a href="{{ product.url }}">{{ product.title }}</a>
    </h3>

    <p class="product-price">
      {% if product.compare_at_price > product.price %}
        <span class="sale-price">{{ product.price | money }}</span>
        <span class="compare-price">{{ product.compare_at_price | money }}</span>
      {% else %}
        <span>{{ product.price | money }}</span>
      {% endif %}
    </p>

    {% if product.variants.size > 1 %}
      <div class="variant-options">
        {% for variant in product.variants %}
          {% assign color = variant.option1 %}
          <label style="display: inline-block; margin: 0 5px;">
            <input type="radio" name="variant-{{ product.id }}" value="{{ variant.id }}" style="display: none;">
            <span style="display: inline-block; width: 20px; height: 20px; background-color: {{ color | handleize }}; border: 1px solid #ccc; border-radius: 50%;"></span>
          </label>
        {% endfor %}
      </div>
    {% endif %}
  </div>

  <style>
    .custom-product-card .image-wrapper:hover .product-hover-image {
      opacity: 1;
    }
    .custom-product-card .image-wrapper:hover .product-main-image {
      opacity: 0;
    }
    .product-price .compare-price {
      text-decoration: line-through;
      color: #aaa;
      margin-left: 5px;
    }
    .product-price .sale-price {
      color: red;
    }
  </style>
{% else %}
  <p>No product selected</p>
{% endif %}
